<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head') %> 
<body class="login-register">

    <%- include('../partials/header') %> 

    <main>

        <div class="contenedor">
            


            <!-- logo -->
            
                <div class="Logo">
                    <img src="/images/logo2 4.png" alt="">

                </div>
                
            
            

        
            <div class="ingresar">
                <h3 class="bienvenido">BIENVENIDO</h3>

                    <form action="" method="POST">

                        <div class="input-contenedor">
                            <label for="email">Email</label>
                             <input type="email" placeholder="Ingresa tu email" id="email" name="email">
                             <span class="text-danger" id="error-email"><%= locals.errores && errores.email ? errores.email.msg : null %></span>
                        </div>

                        <div class="input-contenedor">
                            <label for="pass">Contraseña</label>
                            <input type="password" placeholder="Ingresa tu contraseña" id="pass" name="password" minlength="8">
                            <span class="text-danger" id="error-password"><%= locals.errores && errores.password ? errores.password.msg : null %></span>                          
                        </div>
                        
                        <div class="form-checkmt-0">
                            <input class="" type="checkbox" id="remember" name="remember">
                            <label class="form-check-label" for="remember">Guardar sesion</label>
                          </div>
                        <div class="box-error">
                            <span class="text-danger"><%= locals.errores && errores.email ? errores.email.msg : null %></span>
                        </div>
                        
               


                        <!-- iniciar-sesion -->
                        <div>
                            <button class="btn-iniciar" type="submit">Iniciar sesión</button>
                        </div>

                        <div class="comentario">
                            <p>O inicia sesión con</p>
                        </div>

                        <!-- botones redes -->
                        <div class="redes">
                            <div>
                                <button class="btn-facebook"><i class="fab fa-facebook"></i>Facebook</button>
                            </div>
                            
                            <div>
                                <button class="btn-google"><i class="fab fa-google"></i>Google</button>
                            </div>

                        </div>
                        

                        <!-- crea tu cuenta -->

                        <div class="crea-cuenta">
                            <p>¿Todavia no tenes una cuenta?</p>
                            <a href="/users/register">Crea tu cuenta</a>
                            
                        </div>
                        
                
                </div>
        


            </form>
        </div>
        
    </main>

    <%- include('../partials/footer') %> 
    <script src="/javascripts/loginValidator.js"></script>
 </body>
</html>