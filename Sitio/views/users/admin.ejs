<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>

    <body class="admin">

        <%- include('../partials/header') %>
            <main>
                <div class="row mx-auto"> 
                    <div class="col-12 col-lg-10 mx-auto"> 
                        <div class="card shadow mt-4"> 
                            <div class="card-header">
                                <%= title %> 
                            </div>
                           
                            <div class="card-body">
                                <table class="table">
                                    <thead>
                                      <tr>
                                        <th class="id" scope="col">#</th>
                                        <th class="admin-img" scope="col">Imagen</th>
                                        <th class="admin-name" scope="col">Nombre</th>
                                        <th class="admin-promo" scope="col">Promocion</th>
                                        <th class="admin-price" scope="col">Precio</th>
                                        <th class="admin-action" scope="col">Acciones</th>
                                      </tr>
                                    </thead>
                                    <tbody>
                                        <% products.forEach(product => { %>
                                            <tr>
                                                <th scope="row"><%= product.id %> </th>
                                                <td class="admin-img"><img width="100" src="/images/<%= product.image %> " alt=""></td>
                                                <td  class="admin-name"><%= product.name %> </td>
                                                <td  class="admin-promo"><%= product.promo  %></td>
                                                <td class="admin-price"><%= product.price  %></td>
                                                
                                                <td class="d-flex justify-content-around mx-auto ">
                                                    <a href="/products/edit/<%= product.id %>" class="btn btn-sm btn-success" style="width: 35px;"><i class="fas fa-edit"></i></a>
                                                    <div>
                                                      <form action="/products/destroy/<%= product.id %>?_method=DELETE" method="POST">
                                                        <button type="submit" class="btn btn-sm btn-danger" style="width: 35px;"><i class="fas fa-trash"></i></button>
                                                      </form>
                                                    </div>
                                                  </td>
                                              </tr>
                                        <% }) %>
                                     
                                     
                                    </tbody>
                                  </table>
                                  
                            </div>

                        </div>

                    </div>

                    </div>
                </div>
                

            </main>

            <%- include('../partials/footer') %>
    </body>

</html>