<!DOCTYPE html>
<html>
<%- include('./partials/head') %> 
<body class="home">
    <%- include('./partials/header') %> 
    
    <main> 
        <% if (locals.userLogin) { %>

            <% if (locals.userLogin.rol === 'admin') { %>
              <ul class="nav justify-content-center">
                <li class="nav-item">
                  <a class="nav-link active" href="/product/admin"> Administración</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/product/add"> Agregar Producto</a>
                </li>
                <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Usuario
                  </a>
                  <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" href="/users/profile">Mi perfil</a></li>
                    <li><a class="dropdown-item" href="/products/productCart">Carrito</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="/users/logout">Cerrar sesión</a></li>
                  </ul>
                </li>
              </ul>
              
             
            <% }else{ %>
              <ul class="nav justify-content-center">
                <li class="nav-item">
                  <a class="nav-link active" href="/users/profile">Mi Perfil</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/users/add">Agregar un producto</a>
                </li>
              </ul>
            <% } %>
        <% } %>
        


        <section class="carousel">
          <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
              <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
              <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
            </div>
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img src="/images/carousel_1.png" class="d-block w-100" alt="...">
              </div>
              <div class="carousel-item">
                <img src="/images/carousel_2.png" class="d-block w-100" alt="...">
              </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
        </section>
        <section class="bloqueDeContenido">
            <div class="interiores">
                <h1><a href="/product/productDetail/1">Interiores</a></h1>
                <a href="/product/productDetail/1"><img src="/images/nathan-interior-oakley-OJ031izrcu8-unsplash 2.png" alt=""></a>
            </div>
            <div class="habitacion">
                <h1><a href="/product/productDetail/2">Habitación</a></h1>
                <a href="/product/productDetail/2"><img src="/images/avery-klein-habitacion-JaXs8Tk5Iww-unsplash 2.png" alt=""></a>
                
            </div>
            <div class="productos">
                <h1><a href="/product/productDetail/3">Productos</a></h1>
                <a href="/product/productDetail/3"><img src="/images/kevser-productosxa3zvVw10z8-unsplash 1.png" alt=""></a>
            </div>
        </section>
    </main>
<%- include('./partials/footer') %> 
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>
</body>
</html>

    
